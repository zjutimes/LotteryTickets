<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="Lottery.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">200dip</item>
        <item name="android:textColor">@color/tools_bar_title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Ball">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ball.Red">
        <item name="android:background">@drawable/ball_circle_bg_red</item>
    </style>

    <style name="Ball.Blue">
        <item name="android:background">@drawable/ball_circle_bg_blue</item>
    </style>


</resources>
